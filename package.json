{
  "name": "weather-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "stylelint:fix": "stylelint '**/*.css' --fix",
    "format": "prettier --check --ignore-path .gitignore .",
    "format:fix": "prettier --write --ignore-path .gitignore .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "cypress:open": "cypress open",
    "test:screenshot": "cypress run --component --spec '**/*.screenshot.cy.tsx'",
    "test:unit": "cypress run --component --spec '**/*.unit.cy.ts'",
    "test:screenshot:new": "cypress run --component --env updateSnapshots=true",
    "docker:test:screenshot": "docker build -t unit-test:0.4 . && docker run --mount type=bind,source=\"$(pwd)\"/cypress,target=/app/cypress unit-test:0.4",
    "docker:test:screenshot:update": "docker build -t unit-test:0.4 . && docker run  --env updateSnapshots=true --mount type=bind,source=\"$(pwd)\"/cypress,target=/app/cypress unit-test:0.4",
    "mock-server": "node mock-server.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{css,scss}": [
      "npm run stylelint:fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@types/node": "20.4.1",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "next": "13.4.9",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "5.1.6"
  },
  "devDependencies": {
    "@cypress/webpack-dev-server": "^3.5.0",
    "@storybook/addon-essentials": "^7.0.27",
    "@storybook/addon-interactions": "^7.0.27",
    "@storybook/addon-links": "^7.0.27",
    "@storybook/blocks": "^7.0.27",
    "@storybook/nextjs": "^7.0.27",
    "@storybook/react": "^7.0.27",
    "@storybook/testing-library": "^0.0.14-next.2",
    "@types/cypress-image-snapshot": "^3.1.6",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "cypress": "^12.17.1",
    "cypress-image-snapshot": "^4.0.1",
    "eslint": "8.44.0",
    "eslint-config-next": "^13.1.1",
    "eslint-plugin-storybook": "^0.6.12",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "node-mock-server": "^0.25.4",
    "postcss": "^8.4.25",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^9.0.0",
    "prettier": "^3.0.0",
    "storybook": "^7.0.27",
    "stylelint": "^15.10.1",
    "stylelint-config-recommended": "^13.0.0",
    "stylelint-webpack-plugin": "^4.1.1"
  },
  "overrides": {
    "cypress": "^12.17.1"
  }
}
